<h1>Listing films</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Director</th>
    <th>Country</th>
    <th>Length</th>
    <th>Time</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @films.each do |film| %>
  <tr>
    <td><%= film.title %></td>
    <td><%= film.director %></td>
    <td><%= film.country %></td>
    <td><%= film.length %></td>
    <td><%= film.time %></td>
    <td><%= film.description %></td>
    <td><%= link_to 'Show', film %></td>
    <td><%= link_to 'Edit', edit_film_path(film) %></td>
    <td><%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

