<h1>添加场次</h1>

<%= form_for(@ticket) do |f| %>

  <div class="field">
    <%= f.label :film_id, '选择电影' %><br />
    <select id="ticket_film_id" name="ticket[film_id]" > 
      <% @films.each do |film| %>
      <option value= <%= film.id %> ><%= film.title %></option>
      <% end %>
    </select>
  </div>
  <div class="field">
    <%= f.label :time %><br />
    <%= f.datetime_select :time %>
  </div>
  <div class="field">
    <%= f.label :room %><br />
    <%= f.number_field :room %>
  </div>
 <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<%= link_to 'Back', tickets_path %>
